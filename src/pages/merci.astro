---
import Layout from "@/layouts/Layout.astro";
import "@/styles/globals.css";
import bgOverlay from "@/images/bg-overlay.png";
import Button from "@/components/Button.astro";
---

<Layout
    language="fr"
    title="Merci | Clinique Idyllium, Vaudreuil"
    description="Clinique Idyllium | Injections Botox Fillers | Vaudreuil-Dorion"
    keywords="Clinique, Idyllium, esthétique médicale, rajeunissement, raffermissement cutané"
    currentHref="/merci"
    alternateHref="/en/thank-you"
    metaRobotsDirective="noindex"
>
    <main>
        <div
            class="absolute z-[-101] object-cover w-full h-80 bg-gradient-to-b from-black to-transparent"
        >
        </div>
        <div class="!pt-40 p-5 md:p-8 lg:p-12 max-w-7xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div
                    class="bg-white shadow-2xl rounded-md p-6 md:p-8 lg:p-10 h-full flex flex-col justify-between"
                >
                    <div class="text-center md:text-left">
                        <h2
                            class="text-2xl font-light mb-6 uppercase text-[#CBA76B]"
                        >
                            Clinique Idyllium
                        </h2>
                        <address
                            class="!leading-10 grid gap-3 text-xl text-muted-foreground font-antic not-italic mb-6"
                        >
                            <span>18 Avenue St-Henri</span>
                            <span class="block"
                                >Vaudreuil-Dorion, QC J7V 2J6</span
                            >
                            <a
                                href="tel:(450) 330-0470"
                                class="hover:text-[#CBA76B] transition-colors"
                                >(450) 330-0470</a
                            >
                            <a
                                href="mailto:info@cliniqueidyllium.com"
                                class="hover:text-[#CBA76B] transition-colors"
                                >info@cliniqueidyllium.com</a
                            >
                        </address>
                        <div
                            class="md:py-14 flex justify-center md:justify-start lg:justify-center space-x-6 mt-6"
                        >
                            <a
                                href="https://www.facebook.com/medspaidyllium/"
                                class="text-muted-foreground hover:text-[#CBA76B] transition-colors"
                                aria-label="Facebook"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="36"
                                    height="36"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path
                                        d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                                    ></path>
                                </svg>
                            </a>
                            <a
                                href="https://www.instagram.com/cliniqueidyllium/?hl=en"
                                class="text-muted-foreground hover:text-[#CBA76B] transition-colors"
                                aria-label="Instagram"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="36"
                                    height="36"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <rect
                                        width="20"
                                        height="20"
                                        x="2"
                                        y="2"
                                        rx="5"
                                        ry="5"></rect>
                                    <path
                                        d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                                    ></path>
                                    <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"
                                    ></line>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>

                <div
                    class="font-antic h-full flex flex-col justify-between bg-[#CBA76B] p-6 md:p-8 lg:p-10 shadow-2xl rounded-md bg-repeat text-white"
                    style={`background-image: url('${bgOverlay.src}')`}
                >
                    <h2
                        class="text-2xl font-light mb-6 uppercase text-center md:text-left"
                    >
                        Heures d'ouverture
                    </h2>
                    <ul class="divide-y divide-white/30 flex-grow">
                        <li class="py-3 flex justify-between">
                            <span class="uppercase">Mardi:</span>
                            <span>10h à 19h00</span>
                        </li>
                        <li class="py-3 flex justify-between">
                            <span class="uppercase">Mercredi:</span>
                            <span>10h à 19h00</span>
                        </li>
                        <li class="py-3 flex justify-between">
                            <span class="uppercase">Jeudi:</span>
                            <span>10h à 19h00</span>
                        </li>
                        <li class="py-3 flex justify-between">
                            <span class="uppercase">Vendredi:</span>
                            <span>10h à 19h00</span>
                        </li>
                        <li class="py-3 flex justify-between">
                            <span class="uppercase">Samedi:</span>
                            <span>10h à 19h00</span>
                        </li>
                        <li class="py-3 flex justify-between">
                            <span class="uppercase">Dimanche:</span>
                            <span>Fermé</span>
                        </li>
                        <li class="py-3 flex justify-between">
                            <span class="uppercase">Lundi:</span>
                            <span>Fermé</span>
                        </li>
                    </ul>
                </div>

                <div
                    class="bg-white shadow-2xl rounded-md p-6 md:p-8 lg:p-10 h-full flex flex-col justify-between"
                >
                    <div class="h-full flex flex-col justify-between">
                        <h2
                            class="text-2xl font-light mb-6 uppercase text-[#CBA76B] text-center md:text-left"
                        >
                            Merci pour votre message!
                        </h2>
                    </div>
                </div>
            </div>

            <div
                class="mt-16 w-full h-96 rounded-md overflow-hidden shadow-2xl"
            >
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2795.123456789!2d-73.123456789!3d45.123456789!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4cc91a123456789%3A0x123456789abcdef!2s18%20Avenue%20St-Henri%2C%20Vaudreuil-Dorion%2C%20QC%20J7V%202J6%2C%20Canada!5e0!3m2!1sen!2sus!4v1234567890123!5m2!1sen!2sus"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </main>
</Layout>

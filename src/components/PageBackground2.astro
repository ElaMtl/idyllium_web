---
interface Props {
    src: string;
    section: string;
    title: string;
}
const { src, section, title } = Astro.props;
---

<div class="relative">
    <img
        class="absolute aspect-video top-0 left-0 z-[-101] object-cover w-full"
        src={src}
        alt={title}
        loading="eager"
    />
    <div
        class="absolute inset-0 w-full h-full bg-gradient-to-b from-black/90 to-black/55 z-[-100]"
    >
    </div>
    <div
        class="relative pt-[56.25%] flex justify-center lg:justify-start text-center text-white"
    >
        <div class="absolute bottom-0 lg:bottom-80 px-10">
            <div class="w-full flex flex-col items-center">
                <h1
                    class="text-2xl md:text-4xl lg:text-5xl uppercase lg:tracking-wider"
                >
                    {section}
                </h1>
                <p
                    class="text-sm md:text-lg lg:text-xl pt-2 font-raleway font-thin"
                >
                    {title}
                </p>
                <div class="hidden lg:block w-[110%] h-[1px] bg-white mt-4">
                </div>
            </div>
        </div>
    </div>
</div>

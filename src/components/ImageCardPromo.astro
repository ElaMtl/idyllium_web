---
interface Props {
    src: any;
    alt: string;
    title: string;
    className?: string; // Add className as an optional prop
}

const { src, alt, title, className } = Astro.props;
import Image from "astro/components/Image.astro";
---

<div class="relative text-white hover:text-border group h-60 flex flex-col">
    <div class="flex-grow overflow-hidden">
        <Image class={`absolute rounded-md ${className}`} src={src} alt={alt} />
        <div
            class="absolute inset-x-0 bottom-0 bg-gradient-to-b from-transparent via-transparent to-[#B68E3FBD] opacity-80 group-hover:opacity-95 rounded-b-md h-full"
        >
        </div>
    </div>
    <h2 class="p-4 font-antic uppercase text-2xl z-50">{title}</h2>
</div>

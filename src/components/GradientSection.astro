---
interface Props {
    title: string;
    description: string;
    buttonText: string;
    href: string;
}
const { title, description, buttonText, href } = Astro.props;
import Button from "@/components/Button.astro";
---

<div
    class="text-white px-6 md:px-64 lg:px-96 h-full w-full overflow-hidden"
    style="background-image: linear-gradient(240deg, #4B2810 0%, #FFCF96E0 100%);"
>
    <div class="gap-10 text-center">
        <div class="flex flex-col justify-center">
            <h2 class="text-4xl font-extralight uppercase py-4 xl:py-8">
                {title}
            </h2>
            <p class="text-xl">
                {description}
            </p>
            <div class="flex items-center justify-center py-4 xl:py-8">
                <Button href={href} text={buttonText} />
            </div>
        </div>
    </div>
</div>
